<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <android.support.v7.widget.GridLayout
                android:id="@+id/gridlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="10"
                app:orientation="horizontal"
                app:rowCount="13">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="节次"
                    app:layout_column="0"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周日"
                    app:layout_column="2"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="2"
                    app:layout_row="0"
                    app:layout_rowWeight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周一"
                    app:layout_column="3"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="2"
                    app:layout_row="0"
                    app:layout_rowWeight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周二"
                    app:layout_column="4"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="2"
                    app:layout_row="0"
                    app:layout_rowWeight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周三"
                    app:layout_column="5"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="2"
                    app:layout_row="0"
                    app:layout_rowWeight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周四"
                    app:layout_column="6"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="2"
                    app:layout_row="0"
                    app:layout_rowWeight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周五"
                    app:layout_column="7"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="2"
                    app:layout_row="0"
                    app:layout_rowWeight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周六"
                    app:layout_column="8"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="2"
                    app:layout_row="0"
                    app:layout_rowWeight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="第\n一\n大\n节"
                    app:layout_column="0"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="0.5"
                    app:layout_row="1"
                    app:layout_rowSpan="2"
                    app:layout_rowWeight="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:text="第\n一\n节"
                    app:layout_column="1"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="0.5"
                    app:layout_row="1"
                    app:layout_rowSpan="1"
                    app:layout_rowWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:text="第\n二\n节"
                    app:layout_column="1"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="0.5"
                    app:layout_row="2"
                    app:layout_rowSpan="1"
                    app:layout_rowWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="第\n二\n大\n节"
                    app:layout_column="0"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="0.5"
                    app:layout_row="3"
                    app:layout_rowSpan="2"
                    app:layout_rowWeight="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:text="第\n三\n节"
