                    app:layout_rowSpan="1"
                    app:layout_rowWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:text="第\n四\n节"
                    app:layout_column="1"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="0.5"
                    app:layout_row="4"
                    app:layout_rowSpan="1"
                    app:layout_rowWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="第\n三\n大\n节"
                    app:layout_column="0"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="0.5"
                    app:layout_row="5"
                    app:layout_rowSpan="3"
                    app:layout_rowWeight="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:text="第\n五\n节"
                    app:layout_column="1"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="0.5"
                    app:layout_row="5"
                    app:layout_rowSpan="1"
                    app:layout_rowWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:text="第\n六\n节"
                    app:layout_column="1"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="0.5"
                    app:layout_row="6"
                    app:layout_rowSpan="1"
                    app:layout_rowWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
