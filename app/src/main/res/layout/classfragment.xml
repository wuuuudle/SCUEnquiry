<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="历年课表" />

            <Spinner
                android:id="@+id/planCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="周次" />

            <Spinner
                android:id="@+id/weeks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <android.support.v7.widget.GridLayout
                    android:id="@+id/gridlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:columnCount="10"
                    app:orientation="horizontal"
                    app:rowCount="13">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="节次"
                        app:layout_column="0"
                        app:layout_columnSpan="2"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="周日"
                        app:layout_column="2"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="2"
                        app:layout_row="0"
                        app:layout_rowWeight="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="周一"
                        app:layout_column="3"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="2"
                        app:layout_row="0"
                        app:layout_rowWeight="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="周二"
                        app:layout_column="4"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="2"
                        app:layout_row="0"
                        app:layout_rowWeight="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="周三"
                        app:layout_column="5"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="2"
                        app:layout_row="0"
                        app:layout_rowWeight="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="周四"
                        app:layout_column="6"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="2"
                        app:layout_row="0"
                        app:layout_rowWeight="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="周五"
                        app:layout_column="7"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="2"
                        app:layout_row="0"
                        app:layout_rowWeight="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="周六"
                        app:layout_column="8"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="2"
                        app:layout_row="0"
                        app:layout_rowWeight="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="第\n一\n大\n节"
                        app:layout_column="0"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="1"
                        app:layout_rowSpan="2"
                        app:layout_rowWeight="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n一\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n二\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="2"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="第\n二\n大\n节"
                        app:layout_column="0"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="3"
                        app:layout_rowSpan="2"
                        app:layout_rowWeight="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n三\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="3"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n四\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="4"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="第\n三\n大\n节"
                        app:layout_column="0"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="5"
                        app:layout_rowSpan="3"
                        app:layout_rowWeight="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n五\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="5"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n六\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="6"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n七\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="7"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="第\n四\n大\n节"
                        app:layout_column="0"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="8"
                        app:layout_rowSpan="2"
                        app:layout_rowWeight="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n八\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="8"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n九\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="9"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="第\n五\n大\n节"
                        app:layout_column="0"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="10"
                        app:layout_rowSpan="3"
                        app:layout_rowWeight="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n十\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="10"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n十\n一\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="11"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="第\n十\n二\n节"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="0.5"
                        app:layout_row="12"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                </android.support.v7.widget.GridLayout>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</FrameLayout>